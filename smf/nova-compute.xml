<?xml version="1.0"?>
<!DOCTYPE service_bundle SYSTEM "/usr/share/lib/xml/dtd/service_bundle.dtd.1">
<service_bundle type="manifest" name="nova-compute">

    <service name="site/nova-compute" type="service" version="1">

        <create_default_instance enabled="true"/>
        
        <single_instance/>

        <dependency name="network" grouping="require_all" restart_on="error" type="service">
            <service_fmri value="svc:/milestone/network:default"/>
        </dependency>

        <dependency name="filesystem" grouping="require_all" restart_on="error" type="service">
            <service_fmri value="svc:/system/filesystem/local"/>
        </dependency>

        
        <method_context>
        <!-- 
        	We could probably get this to run under a restricted user with a little work...
            <method_credential user="nova" group="nova"/>
         -->
        </method_context>

        <exec_method type="method" name="start" exec="/usr/bin/nova-compute --flagfile=%{config_file} --flagfile=%{compute_config_file}" timeout_seconds="60"/>

        <exec_method type="method" name="stop" exec=":kill" timeout_seconds="60"/>

        <property_group name="startd" type="framework">
            <propval name="duration" type="astring" value="child"/>
            
            
            <propval name="ignore_error" type="astring" value="core,signal"/>
        </property_group>

        <property_group name="application" type="application">
            <propval name="config_file" type="astring" value="/etc/nova/nova.conf"/>
            <propval name="compute_config_file" type="astring" value="/etc/nova/nova-compute.conf"/>
        </property_group>
        
        
        <stability value="Evolving"/>

        <template>
            <common_name>
                <loctext xml:lang="C">
                    Nova Compute Service
                </loctext>
            </common_name>
        </template>

    </service>

</service_bundle>
